{
    "name"             : "nonpartisan.me",
    "version"          : "0.1",
    "manifest_version" : 2,
    "description"      : "Removes partisanship from your news feeds",
    "icons"            : { "16": "icon16.png",
			   "48": "icon48.png",
			   "128": "icon128.png" },
    "homepage_url"     : "http://nonpartisan.me",
    "page_action"      : {
	"default_icon": "icon48.png",
	"default_title": "nonpartisan'ed"
    },
    "permissions"      : ["tabs","http://www.facebook.com/","http://www.twitter.com/"],
    "options_page"     : "options.html",
    "content_scripts"  : [
	{
	    "matches": ["*://*.facebook.com/*"],
	    "js"     : ["jquery.js","common.js","fb.js","nonpartisan.js"],
	    "run_at" : "document_end"
	},
	{
	    "matches": ["*://twitter.com/*"],
	    "js"     : ["jquery.js","common.js","tw.js","nonpartisan.js"],
	    "run_at" : "document_end"
	}
    ],
    "background": {
	"scripts": ["background.js"],
	"persistent": false
    }
}
