{
    "manifest_version" : 2,
    "name"             : "nonpartisan.me",
    "version"          : "1.0",
    "description"      : "Removes partisanship from the facebook news feed",
    "permissions"      : ["http://www.facebook.com/"],
    "options_page"     : "options.html",
    "content_scripts"  : [
	{
	    "matches": ["*://*.facebook.com/*"],
	    "js"     : ["jquery.js","nonpartisan.js"],
	    "run_at" : "document_end"
	}
    ],
    "background": {
	"scripts": ["background.js"],
	"persistent": false
    }
}
